                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                         {% for Deman in DemandeCredit %}
                        <div class="d-flex px-2">
                        <div>
                          <img src="{{ asset('../images/user.jpg') }}" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">

                          </div>
                          <div class="my-auto">
                            <h6 class="mb-0 text-sm">hamdi</h6>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-sm font-weight-bold mb-0">{{Deman.montant}} DNT</p>
                      </td>
                      <td>
                        <span class="text-xs font-weight-bold">{{Deman.raison}}</span>
                      </td>
                      <td class="align-middle text-center">
                        <div class="d-flex align-items-center justify-content-center">
                          <span class="me-2 text-xs font-weight-bold">{{ Deman.nbrMois }}</span>
                          <div>
                          
                          </div>
                        </div>
                      </td>
                         <td class="align-middle text-center">
                        <div class="d-flex align-items-center justify-content-center">
                          <span class="me-2 text-xs font-weight-bold">{{ Deman.montantMois }}</span>
                          <div>
                          
                          </div>
                        </div>
                      </td>
                      <td class="align-middle">
                 <a class="btn btn-success btn-sm" href="/credits/accepter/{{ Deman.id }}">Accepter</a>
                        <a class="btn btn-danger btn-sm" href="/credits/refuser/{{ Deman.id }}">Refuser</a>
                      </td>

                    </tr>
                      {% endfor %}
                   
               </table>
                   
